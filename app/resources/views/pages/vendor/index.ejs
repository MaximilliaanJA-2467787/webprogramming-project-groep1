<div class="d-flex justify-content-between align-items-start mb-3">
  <div>
    <h1 class="h3 mb-0">Dashboard</h1>
    <small class="text-muted">Welcome back, <%= vendor?.name || 'Vendor' %></small>
  </div>

  <div>
    <a href="/vendor/checkout" class="btn btn-primary">Open Checkout</a>
  </div>
</div>

<!-- Stats row -->
<%- include('../../partials/vendor/stats', { stats: stats }) %>

<div class="row">
  <div class="col-12 col-lg-7">
    <div class="card mb-4">
      <div class="card-header"><strong>Sales (last 7 days)</strong></div>
      <div class="card-body">
        <div class="chart-wrapper mb-3" style="height: 260px;">
          <canvas id="salesChart"></canvas>
        </div>
        <small class="text-muted">Click a point to drill-down into transactions.</small>
      </div>
    </div>

    <%- include('../../partials/vendor/transactions', { transactions: transactions, pagination: pagination }) %>
  </div>

  <div class="col-12 col-lg-5">
    <%- include('../../partials/vendor/menu', { menu: menu }) %>

    <div class="card mb-4">
      <div class="card-header"><strong>Top Locations</strong></div>
      <div class="card-body">
        <% if (!stats.topLocations || stats.topLocations.length === 0) { %>
          <div class="text-muted small">No location data yet</div>
        <% } else { %>
          <ol class="list-group list-group-numbered list-group-flush">
            <% stats.topLocations.forEach(function(loc, idx) { %>
              <li class="list-group-item d-flex justify-content-between align-items-start px-0">
                <div class="ms-2 me-auto">
                  <div class="fw-bold"><%= loc.location || 'Unknown' %></div>
                  <small class="text-muted"><%= loc.transaction_count %> transactions</small>
                </div>
                <span class="badge bg-primary rounded-pill"><%= loc.total_tokens %> tok</span>
              </li>
            <% }); %>
          </ol>
        <% } %>
        <div class="mt-3">
          <a href="/vendor/map" class="btn btn-outline-primary w-100">
            <i class="bi bi-map me-2"></i>View Map
          </a>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-header"><strong>Quick actions</strong></div>
      <div class="card-body">
        <a href="/vendor/checkout" class="btn btn-outline-primary w-100">Open Checkout</a>
      </div>
    </div>
  </div>
</div>

<script>
  // Example: initialize chart with server-provided data
  (function() {
    const labels = <%- JSON.stringify((chart && chart.labels) || []) %>;
    const values = <%- JSON.stringify((chart && chart.values) || []) %>;
    window.addEventListener('load', function() {
      initSalesChart(labels, values);
      const urlParams = new URLSearchParams(window.location.search);
      const err = urlParams.get('error');
      const ok = urlParams.get('success');
      if (err) {
        const e = document.getElementById('errorAlert');
        const em = document.getElementById('errorMessage');
        em.textContent = decodeURIComponent(err);
        e.classList.remove('d-none');
      }
      if (ok) {
        const s = document.getElementById('successAlert');
        const sm = document.getElementById('successMessage');
        sm.textContent = decodeURIComponent(ok);
        s.classList.remove('d-none');
      }
    });
  })();
</script>
