<!-- views/admin/index.ejs -->
<div class="container py-4">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">Admin</li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <div>
      <h1 class="h3 mb-1"><i class="bi bi-speedometer2"></i> Admin dashboard</h1>
      <p class="text-muted small mb-0">Overview of database.</p>
    </div>

    <div class="d-flex gap-2">
      <a href="/admin/tables" class="btn btn-primary btn-lg d-flex align-items-center" title="Open Tables">
        <i class="bi bi-layout-three-columns me-2" aria-hidden="true"></i>
        View tables
      </a>

      <a href="/admin/settings" class="btn btn-outline-secondary btn-lg d-none d-md-inline-flex align-items-center" title="Admin settings">
        <i class="bi bi-gear me-2"></i> Settings
      </a>
    </div>
  </div>

  <!-- Key metrics -->
  <div class="row g-3 mb-4">
    <div class="col-12 col-sm-6 col-md-3">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h6 class="mb-1">Tables</h6>
              <div class="h4 mb-0"><%= typeof tablesCount !== 'undefined' ? tablesCount : (tables ? tables.length : 0) %></div>
            </div>
            <div class="text-muted">
              <i class="bi bi-layout-three-columns fs-3"></i>
            </div>
          </div>
          <div class="small text-muted mt-2">Active database tables</div>
        </div>
      </div>
    </div>

    <div class="col-12 col-sm-6 col-md-3">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h6 class="mb-1">Rows</h6>
              <div class="h4 mb-0"><%= typeof totalRows !== 'undefined' ? totalRows : (pagination && pagination.total ? pagination.total : 0) %></div>
            </div>
            <div class="text-muted">
              <i class="bi bi-file-earmark-text fs-3"></i>
            </div>
          </div>
          <div class="small text-muted mt-2">Total rows across tables</div>
        </div>
      </div>
    </div>

</div>

<script>
  // initialise Bootstrap tooltips
  document.addEventListener('DOMContentLoaded', function () {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el); });

    // small accessibility: focus the main CTA on load (only if user lands on admin)
    var primary = document.querySelector('a.btn-primary');
    if (primary) primary.setAttribute('autofocus','');
  });
</script>
