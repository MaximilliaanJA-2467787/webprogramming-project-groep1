<!-- Analytics Hero Section -->
<section class="bg-primary text-white py-4" style="background: linear-gradient(135deg, #007bff 0%, #0056b3 100%) !important; margin-top: -1px;">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <h1 class="display-5 fw-bold mb-3" style="color: white !important;">Spending Analytics</h1>
        <p class="lead mb-0" style="color: white !important;">Track and analyze your spending patterns</p>
      </div>
      <div class="col-lg-4 text-end">
        <div class="d-flex align-items-center justify-content-end">
          <div class="text-end me-3">
            <div class="fw-semibold">Current Balance</div>
            <div class="h4 mb-0"><%= wallet.balance_tokens %> tokens</div>
          </div>
          <i class="bi bi-graph-up display-4 text-white-50"></i>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Analytics Content -->
<section class="py-5">
  <div class="container">
    <!-- Period Selector -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card border-0 shadow-sm">
          <div class="card-body">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
              <div>
                <h5 class="mb-1">Time Period</h5>
                <p class="text-muted small mb-0">Select a time range to analyze your spending</p>
              </div>
              <div class="btn-group" role="group">
                <a href="/analytics?period=week" class="btn btn-<%= period === 'week' ? 'primary' : 'outline-primary' %>">Week</a>
                <a href="/analytics?period=month" class="btn btn-<%= period === 'month' ? 'primary' : 'outline-primary' %>">Month</a>
                <a href="/analytics?period=year" class="btn btn-<%= period === 'year' ? 'primary' : 'outline-primary' %>">Year</a>
                <a href="/analytics?period=alltime" class="btn btn-<%= period === 'alltime' ? 'primary' : 'outline-primary' %>">All Time</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
      <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                <i class="bi bi-cash-stack fs-5"></i>
              </div>
              <div>
                <small class="text-muted">Total Spent</small>
                <div class="h4 mb-0 fw-bold"><%= stats.total %></div>
                <small class="text-muted">tokens</small>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                <i class="bi bi-arrow-down-up fs-5"></i>
              </div>
              <div>
                <small class="text-muted">Average</small>
                <div class="h4 mb-0 fw-bold"><%= stats.average %></div>
                <small class="text-muted">tokens</small>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                <i class="bi bi-arrow-up-circle fs-5"></i>
              </div>
              <div>
                <small class="text-muted">Highest</small>
                <div class="h4 mb-0 fw-bold"><%= stats.highest %></div>
                <small class="text-muted">tokens</small>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                <i class="bi bi-receipt fs-5"></i>
              </div>
              <div>
                <small class="text-muted">Transactions</small>
                <div class="h4 mb-0 fw-bold"><%= stats.count %></div>
                <small class="text-muted">purchases</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
      <!-- Spending Over Time Chart -->
      <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white border-0">
            <h5 class="fw-bold mb-0">Spending Over Time</h5>
          </div>
          <div class="card-body">
            <canvas id="spendingChart" height="100" data-chart-data='<%- chartData %>'></canvas>
          </div>
        </div>
      </div>

      <!-- Category Breakdown -->
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white border-0">
            <h5 class="fw-bold mb-0">By Category</h5>
          </div>
          <div class="card-body">
            <% if (stats.count > 0) { %>
              <canvas id="categoryChart" data-chart-data='<%- categoryData %>'></canvas>
            <% } else { %>
              <p class="text-muted text-center py-4">No data available</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Vendor Breakdown -->
    <div class="row g-4 mb-4">
      <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white border-0">
            <h5 class="fw-bold mb-0">Top Vendors</h5>
          </div>
          <div class="card-body">
            <% if (stats.count > 0) { %>
              <canvas id="vendorChart" height="120" data-chart-data='<%- vendorData %>'></canvas>
            <% } else { %>
              <p class="text-muted text-center py-4">No data available</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Recent Transactions -->
      <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <h5 class="fw-bold mb-0">Recent Transactions</h5>
            <a href="/wallet" class="btn btn-sm btn-outline-primary">View All</a>
          </div>
          <div class="card-body p-0">
            <div class="list-group list-group-flush">
              <% if (transactions && transactions.length > 0) { %>
                <% transactions.slice(0, 5).forEach(function(tx) { %>
                  <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <div class="fw-semibold"><%= tx.item_name || 'Purchase' %></div>
                        <small class="text-muted">
                          <%= tx.vendor_name || 'Unknown' %> â€¢ 
                          <%= new Date(tx.timestamp).toLocaleDateString() %>
                        </small>
                      </div>
                      <div class="text-danger fw-bold">-<%= tx.amount_tokens %> tok</div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="list-group-item text-center text-muted py-4">
                  No transactions in this period
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
      <div class="col-12">
        <div class="card border-0 shadow-sm">
          <div class="card-body text-center">
            <h5 class="fw-bold mb-3">Quick Actions</h5>
            <div class="d-flex flex-wrap justify-content-center gap-2">
              <a href="/wallet" class="btn btn-primary">
                <i class="bi bi-wallet2 me-2"></i>Go to Wallet
              </a>
              <a href="/dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-house me-2"></i>Dashboard
              </a>
              <button class="btn btn-outline-info" onclick="window.print()">
                <i class="bi bi-printer me-2"></i>Print Report
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script src="/js/ejs/analytics-charts.js"></script>