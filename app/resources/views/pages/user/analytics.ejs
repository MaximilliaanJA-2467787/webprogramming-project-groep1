<!-- Analytics Hero Section -->
<section class="bg-primary text-white py-5" style="background: linear-gradient(135deg, #007bff 0%, #0056b3 100%) !important; margin-top: -1px;">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <h1 class="display-4 fw-bold mb-3" style="color: white !important;">
          <i class="bi bi-graph-up-arrow me-2"></i>Spending Analytics
        </h1>
        <p class="lead mb-0" style="color: rgba(255, 255, 255, 0.9) !important;">
          Track and analyze your spending patterns with detailed insights
        </p>
      </div>
      <div class="col-lg-4 text-lg-end text-start mt-lg-0 mt-3">
        <div class="d-inline-flex align-items-center bg-white bg-opacity-10 rounded-3 p-3 backdrop-blur">
          <div class="text-end me-3">
            <div class="fw-semibold text-white-50 small">Current Balance</div>
            <div class="h3 mb-0 fw-bold text-white"><%= wallet.balance_tokens.toLocaleString() %> <small class="fs-6">tokens</small></div>
          </div>
          <div class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
            <i class="bi bi-wallet2 fs-4 text-white"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Analytics Content -->
<section class="py-5 bg-light">
  <div class="container">
    <!-- Period Selector -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4">
            <!-- Period Type Selector -->
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
              <div>
                <h5 class="fw-bold mb-1"><i class="bi bi-calendar-range text-primary me-2"></i>Time Period</h5>
                <p class="text-muted small mb-0">Select a time range to analyze your spending</p>
              </div>
              <div class="btn-group shadow-sm" role="group">
                <a href="/analytics?period=week&offset=0" class="btn btn-<%= period === 'week' ? 'primary' : 'outline-primary' %>">
                  <i class="bi bi-calendar-week me-1"></i>Week
                </a>
                <a href="/analytics?period=month&offset=0" class="btn btn-<%= period === 'month' ? 'primary' : 'outline-primary' %>">
                  <i class="bi bi-calendar-month me-1"></i>Month
                </a>
                <a href="/analytics?period=year&offset=0" class="btn btn-<%= period === 'year' ? 'primary' : 'outline-primary' %>">
                  <i class="bi bi-calendar me-1"></i>Year
                </a>
                <a href="/analytics?period=alltime" class="btn btn-<%= period === 'alltime' ? 'primary' : 'outline-primary' %>">
                  <i class="bi bi-infinity me-1"></i>All Time
                </a>
              </div>
            </div>

            <!-- Period Navigation -->
            <% if (period !== 'alltime') { %>
            <div class="d-flex align-items-center justify-content-between border-top pt-3">
              <button class="btn btn-outline-primary shadow-sm" onclick="navigatePeriod(-1)">
                <i class="bi bi-chevron-left"></i> Previous
              </button>
              
              <div class="text-center px-3">
                <div class="fw-bold fs-5 text-primary"><%= displayName %></div>
                <small class="text-muted">
                  <% if (offset < 0) { %>
                    <i class="bi bi-clock-history me-1"></i><%= Math.abs(offset) %> <%= period %><%= Math.abs(offset) > 1 ? 's' : '' %> ago
                  <% } else if (offset === 0) { %>
                    <i class="bi bi-circle-fill text-success me-1" style="font-size: 0.5rem;"></i>Current <%= period %>
                  <% } %>
                </small>
              </div>
              
              <button class="btn btn-outline-primary shadow-sm" onclick="navigatePeriod(1)" <%= !canGoNext ? 'disabled' : '' %>>
                Next <i class="bi bi-chevron-right"></i>
              </button>
            </div>
            <% } else { %>
            <div class="text-center border-top pt-3">
              <div class="fw-bold fs-5 text-primary"><i class="bi bi-infinity me-2"></i><%= displayName %></div>
              <small class="text-muted">All your transaction history</small>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 hover-lift">
          <div class="card-body p-4">
            <div class="d-flex align-items-start justify-content-between mb-3">
              <div class="bg-primary bg-opacity-10 text-primary rounded-3 d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                <i class="bi bi-cash-stack fs-4"></i>
              </div>
              <span class="badge bg-primary bg-opacity-10 text-primary">Total</span>
            </div>
            <div>
              <small class="text-muted text-uppercase fw-semibold">Total Spent</small>
              <div class="h3 mb-1 fw-bold text-primary"><%= stats.total.toLocaleString() %></div>
              <small class="text-muted">tokens</small>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 hover-lift">
          <div class="card-body p-4">
            <div class="d-flex align-items-start justify-content-between mb-3">
              <div class="bg-success bg-opacity-10 text-success rounded-3 d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                <i class="bi bi-graph-up fs-4"></i>
              </div>
              <span class="badge bg-success bg-opacity-10 text-success">Avg</span>
            </div>
            <div>
              <small class="text-muted text-uppercase fw-semibold">Average</small>
              <div class="h3 mb-1 fw-bold text-success"><%= stats.average.toLocaleString() %></div>
              <small class="text-muted">tokens per transaction</small>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 hover-lift">
          <div class="card-body p-4">
            <div class="d-flex align-items-start justify-content-between mb-3">
              <div class="bg-warning bg-opacity-10 text-warning rounded-3 d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                <i class="bi bi-arrow-up-circle fs-4"></i>
              </div>
              <span class="badge bg-warning bg-opacity-10 text-warning">Peak</span>
            </div>
            <div>
              <small class="text-muted text-uppercase fw-semibold">Highest</small>
              <div class="h3 mb-1 fw-bold text-warning"><%= stats.highest.toLocaleString() %></div>
              <small class="text-muted">single transaction</small>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 hover-lift">
          <div class="card-body p-4">
            <div class="d-flex align-items-start justify-content-between mb-3">
              <div class="bg-info bg-opacity-10 text-info rounded-3 d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                <i class="bi bi-receipt fs-4"></i>
              </div>
              <span class="badge bg-info bg-opacity-10 text-info">Count</span>
            </div>
            <div>
              <small class="text-muted text-uppercase fw-semibold">Transactions</small>
              <div class="h3 mb-1 fw-bold text-info"><%= stats.count.toLocaleString() %></div>
              <small class="text-muted">total purchases</small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
      <!-- Spending Over Time Chart -->
      <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white border-0 pt-4 px-4">
            <h5 class="fw-bold mb-1"><i class="bi bi-bar-chart-line text-primary me-2"></i>Spending Over Time</h5>
            <p class="text-muted small mb-0">Daily spending breakdown for the selected period</p>
          </div>
          <div class="card-body p-4">
            <div style="height: 320px;">
              <canvas id="spendingChart"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Category Breakdown -->
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-white border-0 pt-4 px-4">
            <h5 class="fw-bold mb-1"><i class="bi bi-pie-chart text-primary me-2"></i>By Category</h5>
            <p class="text-muted small mb-0">Distribution across categories</p>
          </div>
          <div class="card-body p-4">
            <% if (stats.count > 0) { %>
              <div style="max-width: 280px; margin: 0 auto;">
                <canvas id="categoryChart"></canvas>
              </div>
            <% } else { %>
              <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3 mb-0">No data available</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Vendor Breakdown and Recent Transactions -->
    <div class="row g-4 mb-4">
      <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-white border-0 pt-4 px-4">
            <h5 class="fw-bold mb-1"><i class="bi bi-shop text-primary me-2"></i>Top Vendors</h5>
            <p class="text-muted small mb-0">Your most frequent merchants</p>
          </div>
          <div class="card-body p-4">
            <% if (stats.count > 0) { %>
              <div style="height: 320px;">
                <canvas id="vendorChart"></canvas>
              </div>
            <% } else { %>
              <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3 mb-0">No data available</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Recent Transactions -->
      <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-start">
            <div>
              <h5 class="fw-bold mb-1"><i class="bi bi-clock-history text-primary me-2"></i>Recent Transactions</h5>
              <p class="text-muted small mb-0">Latest purchases in this period</p>
            </div>
            <a href="/transactions" class="btn btn-sm btn-outline-primary">
              View All <i class="bi bi-arrow-right ms-1"></i>
            </a>
          </div>
          <div class="card-body p-0">
            <div class="list-group list-group-flush">
              <% if (transactions && transactions.length > 0) { %>
                <% transactions.slice(0, 5).forEach(function(tx) { %>
                  <div class="list-group-item border-0 px-4 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="d-flex align-items-start">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px; flex-shrink: 0;">
                          <i class="bi bi-bag text-primary"></i>
                        </div>
                        <div>
                          <div class="fw-semibold"><%= tx.item_name || 'Purchase' %></div>
                          <small class="text-muted">
                            <i class="bi bi-shop me-1"></i><%= tx.vendor_name || 'Unknown' %> â€¢ 
                            <i class="bi bi-calendar3 me-1"></i><%= new Date(tx.timestamp).toLocaleDateString() %>
                          </small>
                        </div>
                      </div>
                      <div class="text-danger fw-bold text-nowrap ms-3">-<%= tx.amount_tokens.toLocaleString() %> tok</div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="list-group-item border-0 text-center py-5">
                  <i class="bi bi-inbox text-muted" style="font-size: 2.5rem;"></i>
                  <p class="text-muted mt-3 mb-0">No transactions in this period</p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
      <div class="col-12">
        <div class="card border-0 shadow-sm bg-gradient" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
          <div class="card-body text-center py-4">
            <h5 class="fw-bold mb-3"><i class="bi bi-lightning-charge text-primary me-2"></i>Quick Actions</h5>
            <div class="d-flex flex-wrap justify-content-center gap-2">
              <a href="/wallet" class="btn btn-primary shadow-sm">
                <i class="bi bi-wallet2 me-2"></i>Go to Wallet
              </a>
              <a href="/dashboard" class="btn btn-outline-secondary shadow-sm">
                <i class="bi bi-house me-2"></i>Dashboard
              </a>
              <button class="btn btn-outline-info shadow-sm" onclick="window.print()">
                <i class="bi bi-printer me-2"></i>Print Report
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Custom CSS for hover effects -->
<style>
.hover-lift {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.hover-lift:hover {
  transform: translateY(-5px);
  box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
}
.backdrop-blur {
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}
</style>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<!-- Set data for analytics.js -->
<script>
window.analyticsData = {
  spending: <%- chartData %>,
  category: <%- categoryData %>,
  vendor: <%- vendorData %>,
  period: '<%= period %>',
  canGoNext: <%= canGoNext %>
};
</script>

<!-- Analytics Charts Script -->
<script src="/js/ejs/analytics-charts.js"></script>