<!-- Dashboard Hero Section -->
<section class="bg-primary text-white py-4" style="background: linear-gradient(135deg, #007bff 0%, #0056b3 100%) !important; margin-top: -1px;">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <h1 class="display-5 fw-bold mb-3" style="color: white !important;">Welcome back, <%= user.name %>!</h1>
        <p class="lead mb-0" style="color: white !important;">Manage your CashLess account and transactions</p>
      </div>
      <div class="col-lg-4 text-end">
        <div class="d-flex align-items-center justify-content-end">
          <div class="text-end me-3">
            <div class="fw-semibold">Token Balance</div>
            <div class="h4 mb-0">150 tokens</div>
            <small class="text-white-50">€15.00</small>
          </div>
          <i class="bi bi-wallet2 display-4 text-white-50"></i>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Dashboard Content -->
<section class="py-5">
  <div class="container">
    <!-- Quick Actions -->
    <div class="row mb-5">
      <div class="col-12">
        <h3 class="fw-bold mb-4">Quick Actions</h3>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
              <i class="bi bi-plus-lg fs-4"></i>
            </div>
            <h6 class="fw-semibold">Add Tokens</h6>
            <p class="text-muted small">Top up your wallet</p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
              <i class="bi bi-people fs-4"></i>
            </div>
            <h6 class="fw-semibold">Create Group</h6>
            <p class="text-muted small">Start a group pot</p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <div class="bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
              <i class="bi bi-qr-code fs-4"></i>
            </div>
            <h6 class="fw-semibold">Scan QR</h6>
            <p class="text-muted small">Make a payment</p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <div class="bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
              <i class="bi bi-graph-up fs-4"></i>
            </div>
            <h6 class="fw-semibold">Analytics</h6>
            <p class="text-muted small">View spending</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
      <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white border-0">
            <h5 class="fw-bold mb-0">Recent Transactions</h5>
          </div>
          <div class="card-body">
            <div class="list-group list-group-flush">
              <div class="list-group-item border-0 px-0">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                    <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                      <i class="bi bi-cup-hot"></i>
                    </div>
                    <div>
                      <div class="fw-semibold">Coffee - Central Bar</div>
                      <small class="text-muted">2 hours ago</small>
                    </div>
                  </div>
                  <div class="text-end">
                    <div class="fw-semibold text-danger">-3 tokens</div>
                    <small class="text-muted">€0.30</small>
                  </div>
                </div>
              </div>
              <div class="list-group-item border-0 px-0">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                      <i class="bi bi-plus-lg"></i>
                    </div>
                    <div>
                      <div class="fw-semibold">Token Top-up</div>
                      <small class="text-muted">Yesterday</small>
                    </div>
                  </div>
                  <div class="text-end">
                    <div class="fw-semibold text-success">+50 tokens</div>
                    <small class="text-muted">€5.00</small>
                  </div>
                </div>
              </div>
              <div class="list-group-item border-0 px-0">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                    <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                      <i class="bi bi-beer"></i>
                    </div>
                    <div>
                      <div class="fw-semibold">Beer - Party Corner</div>
                      <small class="text-muted">2 days ago</small>
                    </div>
                  </div>
                  <div class="text-end">
                    <div class="fw-semibold text-danger">-5 tokens</div>
                    <small class="text-muted">€0.50</small>
                  </div>
                </div>
              </div>
            </div>
            <div class="text-center mt-3">
              <a href="/transactions" class="btn btn-outline-primary">View All Transactions</a>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white border-0">
            <h5 class="fw-bold mb-0">Account Info</h5>
          </div>
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <img src="/images/default-avatar.png" alt="Avatar" width="50" height="50" class="rounded-circle me-3">
              <div>
                <div class="fw-semibold"><%= user.name %></div>
                <small class="text-muted"><%= user.email %></small>
              </div>
            </div>
            <hr>
            <div class="d-flex justify-content-between mb-2">
              <span>Account Status:</span>
              <span class="badge bg-success">Active</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span>Member Since:</span>
              <span>Jan 2024</span>
            </div>
            <div class="d-flex justify-content-between">
              <span>Total Spent:</span>
              <span>€45.30</span>
            </div>
          </div>
        </div>

        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white border-0">
            <h5 class="fw-bold mb-0">Quick Stats</h5>
          </div>
          <div class="card-body">
            <div class="row text-center">
              <div class="col-6">
                <div class="fw-bold text-primary">24</div>
                <small class="text-muted">Transactions</small>
              </div>
              <div class="col-6">
                <div class="fw-bold text-success">3</div>
                <small class="text-muted">Groups</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
