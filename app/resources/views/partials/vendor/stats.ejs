<div class="row g-3 mb-4">
  <div class="col-12 col-md-3">
    <div class="card stat-card p-3">
      <div class="text-muted small">Tokens sold</div>
      <div class="h4 mt-1"><%= stats.tokensSold ?? 0 %></div>
      <div class="text-muted small">since <%= stats.since || 'start' %></div>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card stat-card p-3">
      <div class="text-muted small">Revenue (tokens)</div>
      <div class="h4 mt-1"><%= stats.revenueTokens ?? 0 %></div>
      <div class="text-muted small">≈ <%= stats.revenueCurrency || '—' %></div>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card stat-card p-3">
      <div class="text-muted small">Visitors (unique)</div>
      <div class="h4 mt-1"><%= stats.uniqueVisitors ?? 0 %></div>
      <div class="text-muted small">period: <%= stats.period || '24h' %></div>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card stat-card p-3">
      <div class="text-muted small">Top item</div>
      <div class="h5 mt-1"><%= stats.topItem?.name || '—' %></div>
      <div class="text-muted small">sold: <%= stats.topItem?.count || 0 %></div>
    </div>
  </div>
</div>
