<div class="container py-4">
  <!-- Breadcrumb: shows current path Admin / Tables -->
  <nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
      <li class="breadcrumb-item active" aria-current="page">Tables</li>
    </ol>
  </nav>

  <!-- Page header with title and count -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h3 class="mb-0"><i class="bi bi-layout-three-columns"></i> Tables</h3>
      <div class="small text-muted">Showing <strong><%= tables.length %></strong> tables</div>
    </div>

    <!-- optional quick actions (keep or remove) -->
    <div class="d-flex gap-2">
      <a href="/admin" class="btn btn-sm btn-outline-secondary" title="Back to admin">
        <i class="bi bi-arrow-left"></i> Admin
      </a>
      <button class="btn btn-sm btn-outline-secondary" id="refreshTablesBtn" title="Refresh">
        <i class="bi bi-arrow-clockwise"></i>
      </button>
    </div>
  </div>

  <!-- Cards grid -->
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
    <% tables.forEach(function(table){ %>
      <div class="col">
        <%- include('table-card', { table: table }) %>
      </div>
    <% }) %>
  </div>
</div>

<script>
  // small UX nicety: refresh button reloads the page (keeps query params)
  document.addEventListener('DOMContentLoaded', function () {
    var btn = document.getElementById('refreshTablesBtn');
    if (btn) btn.addEventListener('click', function () { location.reload(); });
  });
</script>
